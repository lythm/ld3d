# material script


SamplerState ss1
{
	# address mode
	# values:
	#	{REPEAT, MIRROR, CLAMP, BORDER}
	
	AddressModeU = REPEAT;
	AddressModeV = MIRROR;
	AddressModeW = BORDER;
	

	# filter
	# values:
	#	{	
	#		MIN_MAG_MIP_POINT, 
	#		MIN_MAG_POINT_MIP_LINEAR, 
	#		MIN_POINT_MAG_LINEAR_MIP_POINT, 
	#		MIN_POINT_MAG_MIP_LINEAR, 
	#		MIN_LINEAR_MAG_MIP_POINT, 
	#		MIN_LINEAR_MAG_POINT_MIP_LINEAR,
	#		MIN_MAG_LINEAR_MIP_POINT,
	#		MIN_MAG_MIP_LINEAR,
	#		ANISOTROPIC
	#	}
	Filter = MIN_MAG_MIP_LINEAR;

	# minmaxlod
	# values:
	#	float
	MinLod = 0.0;
	MaxLod = 1.0;

	# max anisotropy
	# values:
	#	int
	MaxAnisotropy = 0;

	# border color
	# values:
	#	RGBA
	BorderColor = {1, 1, 1, 1};
}

RenderState rs1
{
	BlendEnable = true;
	FillMode = wireframe;
}
Technique t1
{
	pass p1
	{
		SetRenderState(rs1);

		BindSampler("base", ss1);

		SetVertexShader("1.glsl");
		SetPixelShader("2.glsl");
		SetGeometryShader("1.glsl");
	};;
	Pass p2
	{
	};
}


Technique t2
{
	Pass p1
	{
	};
	Pass p2
	{
	};
	
};
