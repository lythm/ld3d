#version 330

#pragma include "shader/dr_gbuffer.glsl"
#pragma include "matrix_block.glsl"

layout(location = 0) out float	G_BUFFER_0;
layout(location = 1) out vec2	G_BUFFER_1;
layout(location = 2) out vec4	G_BUFFER_2;


in vec3 p_normal;

void main()
{
	float specular = 0;

	G_BUFFER_0 = depth_2_view_space_z(gl_FragCoord.z, MATRIX_PROJ);
	G_BUFFER_1 = p_normal.xy;
	G_BUFFER_2 = vec4(1, 1, 1, specular);

}
