
RenderState rs
{
	DepthEnable							= true;
	DepthFunc							= GREATER;
	DepthWriteMask						= ZERO;
	StencilEnable						= false;

	CULLMODE							= back;

	BLENDENABLE							= true;
	BlendSrcRGB							= ONE;
	BlendDstRGB							= ONE;
	BLENDRGBOP							= ADD;
	BlendSrcAlpha						= ONE;
	BlendDstAlpha						= ONE;
	BLENDALPHAOP						= ADD;
	COLORWRITE							= ALL;
};

SamplerState ss
{
	Filter								= MIN_MAG_MIP_LINEAR;
	AddressModeU						= clamp;
	AddressModeV						= clamp;
};

technique dir_light
{
	pass p1
	{
		SetRenderState(rs);
		BindSampler("shadow_map", ss);

		SetVertexShader("shader/dr_render_sky_light.vs");
		SetPixelShader("shader/dr_render_sky_light.ps");

	}
}

