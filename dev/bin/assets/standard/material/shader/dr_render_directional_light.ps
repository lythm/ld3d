#version 330

#pragma include "dr_gbuffer.glsl"
#pragma include "dr_light.glsl"
#pragma include "matrix_block.glsl"

uniform sampler2D DR_GBUFFER[3];

layout(std140) uniform light
{
	vec3	dir;
	float	intensity;
	vec3	clr;
};

out vec4 f_color;


void main()
{
	vec2 dim = textureSize(DR_GBUFFER[0], 0);

	vec2 uv = gl_FragCoord.xy / dim;

	vec3 n = dr_gbuffer_get_normal(DR_GBUFFER, uv);

	DirectionalLight l;
	
	//l.dir = dir;
	l.dir = normalize(vec3(1, -1, 1));
	
	l.intensity = intensity;
	//l.intensity = 1;
	l.clr = clr;
	//l.clr = vec3(1, 1, 1);

	LightResult ret = dr_light_dir(n, l, MATRIX_WV);
	
	f_color.xyz = ret.diffuse;
	f_color.w = rgb_2_il(ret.specular);
}
